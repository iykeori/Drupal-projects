<header class="page-header">
  <div class="container-fluid">
    {{ page.header }}
  </div>

  <div class="navbar {{ navbar_class }}">
    <div class="collapse navbar-collapse container-fluid" id="navbarContent">
      {{ page.primary_menu }}
    </div>
    <a class="phone" href="tel:{{ practice.phone }}">{{ practice.phone }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

  {{ page.hero }}
</header>

{% if page.top %}
  <div role="complementary" class="container-fluid">
    {{ page.top }}
  </div>
{% endif %}

<main class="container-fluid">
  <a id="main-content" tabindex="-1"></a>

  {% if page.sidebar_first|render|striptags|trim is not empty  %}
    <div class="row">
      <div class="col-12 col-lg-8">
        {{ page.content }}
      </div>
      <aside class="col-12 col-lg-4">
        {{ page.sidebar_first }}
      </aside>
    </div>
  {% else %}
    {{ page.content }}
  {% endif %}
</main>

{% if page.bottom %}
  <div role="complementary">
    {{ page.bottom }}
  </div>
{% endif %}

<footer class="page-footer">
  <div class="container-fluid">
    {{ page.footer }}
  </div>
</footer>

{{ page.modals }}
